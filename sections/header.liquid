<header class="header">
    <h1>
        {{shop.name}}
    </h1>

    <ul>
        {% for link in linklists.main-menu.links -%}
        {{ link.title | link_to: link.url }}
        {%- endfor %}
    </ul>

    {% if section.settings.show_search %}
    <form action="/search">
        <input type="search" name="q" />
        <button type="submit">Search</button>
    </form>
    {% endif %}
</header>

{% style %}
.header{
background: {{section.settings.bg}}
}
{% endstyle %}

{% stylesheet %}
.header{
padding: 20px;
}
{% endstylesheet %}

{% javascript %}
console.warn("Hey from header");
{% endjavascript %}

{% schema %}
{
"name": "Header",
"settings": [
{
"type": "checkbox",
"id": "show_search",
"label":"Show search form? ",
"default": true
},
{
"type": "color",
"id": "bg",
"label":"Background Color Section"
}
]
}
{% endschema %}
{% paginate blog.article by 5 %}

<h1>
    {{blog.title}}
</h1>

{% for article in blog.articles %}
<div>
    <a href="{{article.url}}">
        <h2>
            {{article.title}}
        </h2>
        <p>
            {{article.author}}
        </p>
        <div>
            {{article.expert}}
        </div>
    </a>
</div>

{% endfor %}

{{ paginate |default_pagination}}
{% endpaginate %}